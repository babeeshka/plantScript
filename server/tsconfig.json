{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "..",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@rootTypes/*": ["types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "./*.ts",
    "./models/**/*.ts",
    "./schemas/**/*.ts",
    "../types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
