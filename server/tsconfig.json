{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "../global.d.ts"
    ],
    "types": [
      "node",
      "jest",
      "global"
    ]
  },
  "include": [
    "**/*.ts",
    "./*.ts",
    "./models/**/*.ts",
    "./schemas/**/*.ts",
    "../global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}